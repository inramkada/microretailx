  # Content Security Policy (Strict)
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'wasm-unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; font-src 'self'; connect-src 'self' https://api.microretailx.com; worker-src 'self' blob:; base-uri 'self'; frame-ancestors 'none'; form-action 'self'; upgrade-insecure-requests
  
  # HSTS (HTTP Strict Transport Security)
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  
  # Cross-Origin Headers
